{
  "manifest_version": 3,
  "name": "Wrocławski Kiosk Wiadomości",
  "version": "1.0",
  "description": "WKW umożliwia dostęp do aktualności, kultury, sportu i innych ważnych tematów z Wrocławia w jednym, łatwo dostępnym miejscu.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon_16.png",
      "64": "icon_64.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    }
  },
  "permissions": [
    "https://www.wroclaw.pl/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.wroclaw.pl/*"
  ]
}